    "version": "0.2.0",
    "configurations": [
        {
            "name": "debugpy-sample",
            "type": "debugpy",
            "request": "attach",
            "justMyCode": false, // set bang false de co the jump den system lib khi debug
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    // "localRoot": "${workspaceFolder}/debug_sample/debugpy_sample",
                    // "remoteRoot": "/usr/src/app"
                    "localRoot": "${workspaceFolder}/debug_sample/debugpy_sample",
                    "remoteRoot": "${workspaceFolder}/debug_sample/debugpy_sample",
                }
            ]
        },
        {
            "name": "unit-test-sample",
            "type": "debugpy",
            "request": "attach",
            "justMyCode": false, // set bang false de co the jump den system lib khi debug
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}",
                }
            ]
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}